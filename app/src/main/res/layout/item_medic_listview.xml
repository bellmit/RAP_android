<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_medic_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/empty_photo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_medic_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="广州市白云区诺亚大药房"
                android:textColor="@color/font_block"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离:"
                    android:textColor="@color/font_block"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_medic_list_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5Km"
                    android:textColor="@color/font_block"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="评价:"
                    android:textColor="@color/font_block"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_medic_list_cope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/item_medic_list_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_red"
            android:text="进店看看"
            android:textColor="@color/font_red"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>